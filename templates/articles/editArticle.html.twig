{% extends 'base.html.twig' %}

{% block title %}Редактировать статью{% endblock %}

{% block body %}

    <div class="container main">
         <div class="row pt-2">
                    <a href="{{ path('article',{'id': form.vars.value.id}) }}" class="btn btn-outline-primary my-2">
                        Вернуться к статье
                    </a>
         </div>
        <div class="row py-3">
            <div class="col d-flex justify-content-center ">
                <h1>Редактировать Статью</h1>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col">

                <div class=' bg-light p-3 w-75' >
                    {{ form_start(form) }}

                    <div class="col">
                        {{ form_errors(form) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.title) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.artText) }}
                    </div>
                   <div class="form-group">
                       {{ form_label(form.tags) }}
                       {{ form_errors(form.tags) }}
                       {{ form_widget(form.tags, {'value' : form.tags.parent.vars.value.tags|join(' ')}) }}
                       {{ form_help(form.tags) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>
{% endblock %}
